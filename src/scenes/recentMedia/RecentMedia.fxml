<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="523.0" prefWidth="762.0" style="-fx-background-color: #1D2129;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.recentMedia.RecentMediaController">
   <top>
      <AnchorPane prefHeight="186.0" prefWidth="617.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Recent Media" textFill="WHITE" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="40.0">
               <font>
                  <Font name="Ebrima Bold" size="40.0" />
               </font>
            </Label>
            <Button fx:id="btnPlayAll" layoutX="40.0" layoutY="114.0" mnemonicParsing="false" onAction="#playAllFile" prefHeight="37.0" prefWidth="111.0" style="-fx-background-color: #2880E8; -fx-text-fill: #ffffff; -fx-border-radius: 5;" text="Play all">
               <font>
                  <Font name="Ebrima" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnClearFile" layoutX="297.0" layoutY="114.0" mnemonicParsing="false" onAction="#clearFile" prefHeight="37.0" prefWidth="111.0" style="-fx-background-color: #1D2129; -fx-border-color: #2880E8; -fx-text-fill: #2880E8; -fx-border-radius: 5;" text="Delete" textFill="WHITE">
               <font>
                  <Font name="Ebrima" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnPlaySingleMedia" layoutX="169.0" layoutY="114.0" mnemonicParsing="false" onAction="#playSingleFile" prefHeight="37.0" prefWidth="111.0" style="-fx-border-color: #2880E8; -fx-background-color: #1D2129; -fx-border-radius: 5;" text="Play" textFill="#2880e8">
               <font>
                  <Font name="Ebrima" size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </top>
   <center>
      <TableView fx:id="recentMediaTable" prefHeight="268.0" prefWidth="617.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="allMediaTitleColumn" prefWidth="303.0" style="-fx-alignment: center;" styleClass="column" text="Title" />
            <TableColumn fx:id="allMediaLastDateOpenedColumn" prefWidth="303.0" style="-fx-alignment: center;" styleClass="column" text="Last date opened" />
            <TableColumn fx:id="allMediaDurationColumn" minWidth="0.0" prefWidth="311.0" style="-fx-alignment: center;" styleClass="column" text="Duration" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <stylesheets>
      <URL value="@RecentMediaStyles.css" />
      <URL value="@../../css/styles.css" />
   </stylesheets>
</BorderPane>
