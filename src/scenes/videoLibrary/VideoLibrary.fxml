                  <TableColumn fx:id="videoLibraryTitleColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="319.20001220703125" styleClass="column" text="Title" />
                  <TableColumn fx:id="videoLibraryArtistColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="203.20001220703125" styleClass="column" text="Artist" />
                  <TableColumn fx:id="videoLibraryAlbumColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="175.9998779296875" styleClass="column" text="Album" />
                  <TableColumn fx:id="videoLibraryDurationColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="93.60009765625" styleClass="column" text="Duration" />
               </columns>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <styleClass>
                  <String fx:value="noheader" />
                  <String fx:value="table" />
               </styleClass>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TableView>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="40.0" />
         </padding>
      </VBox>
    </children>
   <stylesheets>
      <URL value="@../../css/styles.css" />
      <URL value="@VideoLibrary.css" />
   </stylesheets>
</AnchorPane>
